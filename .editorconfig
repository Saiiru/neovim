# ~/.config/nvim/.editorconfig  (coloque tamb√©m nos projetos)
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.java]
indent_size = 2
continuation_indent_size = 2
max_line_length = 120

[*.{c,cpp,h,hpp}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{py}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false